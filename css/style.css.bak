    width: 8px;
    height: 8px;
    background: var(--primary-color);
    border-radius: 50%;
}

.info-item:hover span {
    color: var(--primary-color);
}

.info-item p, .info-item a {
    color: var(--dark-color);
    font-size: 1rem;
    font-weight: 500;
}

.info-item a {
    transition: all 0.3s ease;
}

.info-item a:hover {
    color: var(--primary-color);
    text-decoration: underline;
}

.about-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2.5rem;
    justify-content: flex-start;
}

.about-cta .btn {
    margin-right: 1rem;
    margin-bottom: 1rem;
}

.about-cta .primary-btn {
    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
    color: white;
    box-shadow: 0 5px 15px rgba(37, 99, 235, 0.3);
    transition: all 0.3s ease;
}

.about-cta .primary-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(37, 99, 235, 0.4);
    background: linear-gradient(to right, var(--primary-color-dark), var(--secondary-color-dark));
}

.about-cta .secondary-btn {
    background: transparent;
    color: var(--dark-color);
    border: 2px solid var(--primary-color);
    transition: all 0.3s ease;
}

.about-cta .secondary-btn:hover {
    background: rgba(59, 130, 246, 0.1);
    color: var(--primary-color);
    border-color: var(--primary-color-dark);
    transform: translateY(-3px);
}

.about-cta .accent-btn {
    background: var(--accent-color);
    color: white;
    box-shadow: 0 5px 15px rgba(245, 158, 11, 0.3);
    transition: all 0.3s ease;
}

.about-cta .accent-btn:hover {
    background: var(--accent-color-dark);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
}

.about-cta .download-btn {
    position: relative;
    padding-left: 2.5rem;
    overflow: hidden;
}

.about-cta .download-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(255,255,255,0.1), rgba(255,255,255,0));
    transform: translateX(-100%);
    transition: all 0.4s ease;
}

.about-cta .download-btn:hover::before {
    transform: translateX(100%);
}

.about-cta .download-btn i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    transition: all 0.3s ease;
}

.about-cta .download-btn:hover i {
    animation: bounce 1s infinite;
}

@keyframes bounce {
    0%, 100% { transform: translateY(-50%); }
    50% { transform: translateY(-65%); }
}

.about-floating-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    z-index: 1;
}

.about-floating-shapes .shape {
    position: absolute;
    background: white;
    border-radius: 50%;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-color);
    animation: float 6s infinite ease-in-out;
}

.about-floating-shapes .shape-1 {
    top: 10%;
    left: -10px;
    animation-delay: 0s;
}

.about-floating-shapes .shape-2 {
    top: 40%;
    right: -15px;
    animation-delay: 2s;
}

.about-floating-shapes .shape-3 {
    bottom: 20%;
    left: 10%;
    animation-delay: 4s;
}

.about-floating-shapes .shape-4 {
    bottom: 10%;
    right: 10%;
    animation-delay: 1s;
}

@keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(5deg); }
    50% { transform: translateY(5px) rotate(-5deg); }
    75% { transform: translateY(-5px) rotate(2deg); }
}

.image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 90%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 50%, rgba(0,0,0,0.8) 100%);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 2rem;
    opacity: 0;
    z-index: 3;
    transition: all 0.5s ease;
    border-radius: 20px;
    visibility: hidden;
}

.about-image:hover .image-overlay {
    opacity: 1;
    visibility: visible;
}

.overlay-content {
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.5s ease 0.1s;
}

.about-image:hover .overlay-content {
    transform: translateY(0);
    opacity: 1;
}

.overlay-content .btn {
    background: rgba(255, 255, 255, 0.9);
    color: var(--dark-color);
    border: none;
    font-weight: 600;
    letter-spacing: 0.5px;
    padding: 0.7rem 1.5rem;
    font-size: 0.9rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
}

.overlay-content .btn:hover {
    background: white;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
}

.about-background-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
    overflow: hidden;
}

.about-background-shapes .shape {
    position: absolute;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    opacity: 0.4;
}

.about-background-shapes .shape-1 {
    width: 300px;
    height: 300px;
    top: -50px;
    left: -150px;
    animation: morph 15s linear infinite alternate;
}

.about-background-shapes .shape-2 {
    width: 200px;
    height: 200px;
    bottom: 50px;
    right: -100px;
    animation: morph 10s linear infinite alternate;
    animation-delay: 5s;
}

.about-background-shapes .shape-3 {
    width: 150px;
    height: 150px;
    bottom: 150px;
    left: 10%;
    animation: morph 12s linear infinite alternate;
    animation-delay: 8s;
}

.about-background-shapes .shape-4 {
    width: 100px;
    height: 100px;
    top: 30%;
    right: 10%;
    animation: morph 8s linear infinite alternate;
    animation-delay: 3s;
}

@keyframes morph {
    0% {
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
    25% {
        border-radius: 70% 30% 30% 70% / 70% 70% 30% 30%;
    }
    50% {
        border-radius: 30% 70% 70% 30% / 70% 30% 30% 70%;
    }
    75% {
        border-radius: 70% 30% 30% 70% / 30% 70% 70% 30%;
    }
    100% {
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
}

/* Media Queries for About Section */
@media screen and (max-width: 992px) {
    .about-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .about-image {
        margin-bottom: 2rem;
    }
    
    .about-info {
        padding: 1.5rem;
    }
    
    .info-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
}

@media screen and (max-width: 768px) {
    .about {
        padding: 4rem 0;
    }
    
    .about-intro h3 {
        font-size: 1.3rem;
    }
    
    .about-intro p {
        font-size: 1rem;
    }
    
    .about-text h3 {
        font-size: 1.5rem;
    }
    
    .feature-item {
        padding: 1.2rem;
    }
    
    .feature-icon {
        width: 45px;
        height: 45px;
        font-size: 1rem;
    }
    
    .about-cta {
        justify-content: center;
    }
}

@media screen and (max-width: 576px) {
    .about-features {
        grid-template-columns: 1fr;
    }
    
    .info-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .about-cta {
        flex-direction: column;
        align-items: stretch;
    }
    
    .about-cta .btn {
        margin-right: 0;
        text-align: center;
    }
    
    .animated-border {
        display: none;
    }
}

