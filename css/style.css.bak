/* === Skills Progress Bars === */
.skill-progress {
    margin-top: 0.5rem;
    height: 6px;
    background-color: #e5e7eb;
    border-radius: 5px;
    position: relative;
    overflow: hidden;
}

.progress-bar {
    height: 100%;
    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
    border-radius: 5px;
    transition: width 1s ease-in-out;
}

.skill-progress span {
    position: absolute;
    top: -20px;
    right: 0;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--primary-color);
}

/* === Project Buttons === */
.project-btn {
    margin-top: 1rem;
    display: inline-block;
}

.project-card.highlighted {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

/* === Success Button === */
.success-btn {
    background: linear-gradient(to right, #28a745, #20c997);
    color: #fff;
    box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
}

.success-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 7px 20px rgba(40, 167, 69, 0.4);
}

/* === Particles === */
#particles-js {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
    opacity: 0.6;
}

/* === Enhanced Animations === */
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInRight {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes fadeInLeft {
    from {
        opacity: 0;
        transform: translateX(-50px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes zoomIn {
    from {
        opacity: 0;
        transform: scale(0.8);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes shimmer {
    0% {
        background-position: -100% 0;
    }
    100% {
        background-position: 200% 0;
    }
}

.hero-text h1 {
    opacity: 0;
    animation: fadeInLeft 1s ease-out forwards, gradientText 8s ease infinite;
}

.hero-text h2 {
    animation: fadeInUp 1s ease-out forwards;
    animation-delay: 0.3s;
}

.hero-text p {
    animation: fadeInUp 1s ease-out forwards;
    animation-delay: 0.6s;
}

.hero-btns {
    animation: fadeInUp 1s ease-out forwards;
    animation-delay: 0.9s;
}

.social-icons {
    animation: fadeInUp 1s ease-out forwards;
    animation-delay: 1.2s;
}

.hero-image {
    animation: zoomIn 1s ease-out forwards, float 6s ease-in-out infinite;
    animation-delay: 1.5s;
}

/* Button glow effect */
.primary-btn {
    position: relative;
    overflow: hidden;
}

.primary-btn::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(90deg, 
        rgba(255,255,255,0) 0%, 
        rgba(255,255,255,0.1) 50%, 
        rgba(255,255,255,0) 100%);
    transform: rotate(45deg);
    animation: shimmer 3s infinite;
    z-index: 1;
}

.primary-btn span {
    position: relative;
    z-index: 2;
}

/* Add shine effect to section titles */
.section-title h2 {
    position: relative;
    overflow: hidden;
}

.section-title h2::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        rgba(255,255,255,0) 0%, 
        rgba(255,255,255,0.3) 50%, 
        rgba(255,255,255,0) 100%);
    animation: shine 3s infinite;
}

@keyframes shine {
    0% {
        left: -100%;
    }
    20% {
        left: 100%;
    }
    100% {
        left: 100%;
    }
}

/* === Media Queries === */
@media screen and (max-width: 1024px) {
    .hero-content {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
